   \assinatura{\textbf{Professora \imprimirorientador} \\ UFFS \\Orientador} 
   \assinatura{\textbf{Professor Dr. Herton Castiglioni Lopes} \\UFFS \\Examinador}
   \assinatura{\textbf{Professor Dr.} \\ \\Examinador}
   %\assinatura{\textbf{Professor} \\ Convidado 3}
   %\assinatura{\textbf{Professor} \\ Convidado 4}
      
   \begin{center}
    \vspace*{0.5cm}
    {\imprimirlocal}
    \par
    {\imprimirdata}
    \vspace*{1cm}
  \end{center}
  
\end{folhadeaprovacao}
